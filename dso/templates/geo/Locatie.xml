<geo:Locatie>
    <geo:naam>{{ locatie.naam }}</geo:naam>
    <geo:geometrie>
        <basisgeo:Geometrie gml:id="id-{{ locatie.gml_id }}">
            <basisgeo:id>{{ locatie.basis_id }}</basisgeo:id>
            <basisgeo:geometrie>
                {{ locatie.geometry_xml }}
            </basisgeo:geometrie>
        </basisgeo:Geometrie>
    </geo:geometrie>
    <geo:groepID>{{ locatie.groep_id }}</geo:groepID>
</geo:Locatie>