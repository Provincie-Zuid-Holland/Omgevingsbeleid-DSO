<RegelingVrijetekst xmlns="https://standaarden.overheid.nl/stop/imop/tekst/"
    {% if componentnaam is not none %} componentnaam="{{ componentnaam }}" {% endif %}
    {% if was is not none %} was="{{ was }}" {% endif %}
    {% if wordt is not none %} wordt="{{ wordt }}" {% endif %} >
    <RegelingOpschrift eId="longTitle" wId="longTitle">
        <Al>{{ regeling_opschrift }}</Al>
    </RegelingOpschrift>
    {{ lichaam }}
    {% for bijlage in bijlagen %}
        {{ bijlage }}
    {% endfor %}
</RegelingVrijetekst>