<Bijlage data-hint-wid-code="bijlage-werkingsgebieden">
    <Kop>
        <Label>Bijlage</Label>
        <Nummer>1</Nummer>
        <Opschrift>Overzicht informatieobjecten</Opschrift>
    </Kop>
    <Divisietekst data-hint-wid-code="bijlage-werkingsgebieden-divisietekst">
        <Inhoud>
            <Begrippenlijst data-hint-wid-code="bijlage-werkingsgebieden-divisietekst-referenties">
                {%- for gebied in gebieden %}
                <Begrip data-hint-wid-code="bijlage-werkingsgebieden-divisietekst-referentie-{{ gebied.code }}">
                    <Term>{{ gebied.title }}</Term>
                    <Definitie>
                        <Al>
                            <ExtIoRef data-hint-wid-code="bijlage-werkingsgebieden-divisietekst-referentie-{{ gebied.code }}-ref" data-hint-werkingsgebied-code="{{ gebied.code }}" ref="{{ gebied.frbr.get_expression() }}">{{ gebied.frbr.get_expression() }}</ExtIoRef>
                        </Al>
                    </Definitie>
                </Begrip>
            {%- endfor %}
            </Begrippenlijst>
        </Inhoud>
    </Divisietekst>
</Bijlage>